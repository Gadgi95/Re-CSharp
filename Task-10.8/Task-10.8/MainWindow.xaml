<Window x:Class="Task_10._8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_10._8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ListOfClients" 
                 d:ItemsSource="{d:SampleData ItemCount=5}" 
                 Margin="10,38,546,31"
                 FontSize="18" 
                 SelectionChanged="ListOfClients_SelectionChanged" Initialized="ListOfClients_Initialized"
                 />
        <TextBlock x:Name="ClientInfoTextBlock" 
                   HorizontalAlignment="Left" 
                   Margin="326,38,0,0" 
                   TextWrapping="Wrap" 
                   Text="Информация о клиенте" 
                   VerticalAlignment="Top"
                   FontSize="18" Height="179" Width="402"
                   />
    </Grid>
</Window>
